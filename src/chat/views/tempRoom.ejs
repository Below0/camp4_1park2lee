<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title><%= roomName %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<body>
  <div class="container">
    <h3 id="room"><%= roomName %></h3>
    <div class="container" style="height: 700px;">
      <ul id="chat">
        <% for(i = 0; i < chatList.length; i++){ %>
          <% if(chatList[i].chatUserId == userId){ %>
            <li style="margin-left: 80%; list-style: none"><%= chatList[i].chatMsg%></li>
          <% }else{ %>  
            <li style="margin-left: 8%; list-style: none"><%= chatList[i].chatUserName%>: <%= chatList[i].chatMsg%></li>
          <% } }%>   
      </ul>
    </div>
    <!-- <form class="form-inline"> -->
    <form class="form-horizontal" id="chatting">
      <div class="form-group">
        <label for="msg" class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="msg" placeholder="Message">
        </div>
      </div>
      <div class="form-group" style="margin-left: 40%;"">
        <div class=" col-sm-offset-2 col-sm-10">
        <input type="submit" id="send" class="send" value="Send" style="width: 50px;" />
        <input type="submit" id="exit" class="exit" value="Exit" style="width: 50px;" />
      </div>
  </div>
  </form>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    $(function () {

      //handshake queryset에 정보전달
      this.socket = io(`http://localhost:3000?room=<%=roomId%>&user=<%=userId%>`);

      //서버로 접속신호 보낼 때
      this.socket.emit('chat enter');

      //서버로부터 접속신호를 받을 때
      this.socket.on('server chat enter', function (data) {
        $("#chat").append($('<li style="margin-left: 43%; list-style: none">').text(`${data.user}님이 입장했습니다.`));
      });

      //서버로 메시지 전송할때
      $("input#send").click((e) => {
        e.preventDefault();

        this.socket.emit('chat message', { //content
          msg: $("#msg").val()
        });
      });

      // 서버로부터의 메시지를 받을 때
      this.socket.on('server chat message', function (data) {
        if (data.user == <%= userId %>) {
        $("#chat").append($('<li style="margin-left: 80%; list-style: none">').text(`${data.msg}`));
      } else {
        $("#chat").append($('<li style="margin-left: 8%; list-style: none";">').text(`${data.user}: ${data.msg}`));
      }
    });

    this.socket.on('server disconnected', function (data) {
      $("#chat").append($('<li style="margin-left: 43%; list-style: none">').text(`${data.user}님이 퇴장했습니다.`));
    });

    });

  </script>
</body>

</html>